<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>New post</title>
    <% include ../layout/head %>
        <script src="https://cloud.tinymce.com/stable/tinymce.min.js"></script>
        <script>
            tinymce.init({
                selector: 'textarea'
            });
        </script>
</head>

<body>
    <div class="container">
        <% include ../layout/nav %>

            <div class="panel panel-default">
                <div class="panel-heading">
                    Edit post
                </div>
                <div class="panel-body">
                    <div class="row">
                        <div class="col-lg-6">
                            <div id="alert" style="<% if (!data || !data.error) {%> display:none;
                                        <%} %>" class="alert alert-danger">
                                <p>Error:</p>

                                <% if (data && data.error) {%>
                                    <span>
                                        <%= data.error %>
                                    </span>
                                    <%} 
                                        %>
                            </div>
                            <form role="form" method="" action="">
                                <input class='id' type='hidden' name='id' value='<% 
                                if (data && data.post) {%> <%= data.post.id %> <%} %>'>
                                <div class="form-group">
                                    <label>Title</label>
                                    <input class="form-control title" name="title" placeholder="title" value="<% 
                                    if (data && data.post) {%> <%= data.post.title %> <%} %>">

                                </div>
                                <div class="form-group">
                                    <label>Content</label>
                                    <textarea class="form-control" name="content" placeholder="content"><% 
                                        if (data && data.post) {%> <%= data.post.content %> <%} %></textarea>

                                </div>
                                <div class="form-group">
                                    <label>Author</label>
                                    <input class="form-control author" name="author" placeholder="author" value="<% 
                                    if (data && data.post) {%> <%= data.post.author %> <%} %>">

                                </div>
                                <input class="btn-success postEdit" type="button" name="" value="Edit">
                            </form>
                        </div>
                        <!-- /.col-lg-6 (nested) -->
                    </div>
                    <!-- /.row (nested) -->
                </div>
                <!-- /.panel-body -->
            </div>
    </div>

    <script type="text/javascript" src="/javascripts/post.js"></script>
</body>

</html>